@model CRM_WebApp.Models.Customer

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-lg border-0 rounded-lg">
				<div class="btn btn-success btn-lg">
					<h3 class="font-weight-light">Create Customer</h3>
				</div>
				<div class="card-body p-4">
					<form asp-action="Create" method="post">
						<div class="form-group">
							<label asp-for="FirstName" class="font-weight-bold">First Name</label>
							<input asp-for="FirstName" class="form-control rounded-pill" placeholder="Enter first name" />
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="LastName" class="font-weight-bold">Last Name</label>
							<input asp-for="LastName" class="form-control rounded-pill" placeholder="Enter last name" />
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="Email" class="font-weight-bold">Email</label>
							<input asp-for="Email" class="form-control rounded-pill" placeholder="Enter email address" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="PhoneNumber" class="font-weight-bold">Phone Number</label>
							<input asp-for="PhoneNumber" class="form-control rounded-pill" placeholder="Enter phone number" />
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="Address" class="font-weight-bold">Address</label>
							<input asp-for="Address" class="form-control rounded-pill" placeholder="Enter address" />
							<span asp-validation-for="Address" class="text-danger"></span>
						</div>

						<div class="card-footer text-center">
							<button type="submit" class="btn btn-success btn-block rounded-pill">Create Customer</button>
							<a asp-action="Index" class="btn btn-secondary rounded-pill">Back to List</a>
						</div>
					</form>
					
				</div>
				

				
			</div>
		</div>
	</div>

	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
